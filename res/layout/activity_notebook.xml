<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.greverbal.NoteBookActivity" >

    <com.example.greverbal.QuestionTabBar
        android:id="@+id/QuestionTabBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="阅读"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton1"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1" />

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton2"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton3"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1" />

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton4"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="填词"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton5"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1" />

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton6"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton7"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1" />

            <com.example.greverbal.NoteBookButton
                android:id="@+id/mybutton8"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>