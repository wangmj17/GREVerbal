<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    	android:layout_height="wrap_content"
        android:layout_width="fill_parent" 
        android:background="#00000000"   
        >     
    
    <View
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:background="#88888888"
        android:layout_alignParentTop="true"
        android:id="@+id/SeparationLine"/>
    
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#00000000" 
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/YourAnswer"
        android:layout_below="@+id/SeparationLine"/>
    
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#00000000" 
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:id="@+id/RightAnswer"
        android:layout_below="@+id/YourAnswer"/>
    
    <Button 
        android:layout_height="20dip"
        android:layout_width="80dip"
        android:layout_below="@+id/RightAnswer"
        android:background="@drawable/add_to_notebook"
        android:id="@+id/AddtoNoteBook"
        android:layout_marginTop="5dip"
        android:layout_centerHorizontal="true"/>
    
</RelativeLayout>   